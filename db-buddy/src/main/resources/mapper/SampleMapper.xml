<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team2.dbbuddy.mapper.SampleMapper">

    <select id="findAll" resultType="SampleDTO">
        SELECT * FROM TBL_SAMPLE
    </select>

    <select id="findById" resultType="SampleDTO">
        SELECT * FROM TBL_SAMPLE WHERE ID = #{id}
    </select>

    <insert id="save" parameterType="SampleDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO TBL_SAMPLE (TABLE_ID, DATA_JSON, ACTIVE_FL, REG_DT)
        VALUES (#{tableId}, #{dataJson}, #{activeFl}, NOW())
    </insert>

    <update id="update" parameterType="SampleDTO">
        UPDATE TBL_SAMPLE
        SET DATA_JSON = #{dataJson},
            ACTIVE_FL = #{activeFl},
            CHG_DT = NOW()
        WHERE ID = #{id}
    </update>

    <delete id="delete">
        DELETE FROM TBL_SAMPLE WHERE ID = #{id}
    </delete>

</mapper>
